@model IEnumerable<Project2023.Models.ApplicationUser>

@{
    ViewData["Title"] = "اعضاء هيئة تدريس";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@if (ViewBag.id == 1)
{
    <p>
        <a asp-action="Create" class="btn btn-primary" >اضافة</a>
    </p>
}

else
{
    <p>
        <a asp-action="UploadStudents" class="btn btn-primary">تحميل الطلاب</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DoctorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DImage)
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.UserType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HOD)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.UserDept.DeptName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
               <img src="~/Images/@item.DImage" style="width : 35px ; height : 35px">
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.UserType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HOD)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.UserDept.DeptName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
